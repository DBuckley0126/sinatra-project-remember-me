  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />

    <title>Remember Me</title>

    <meta name="viewport" content="initial-scale=1.0 , minimum-scale=1.0 , maximum-scale=1.0" />

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>

    <link rel="stylesheet" href="/stylesheets/account.css" />

  </head>
  <body>
    <div class="wrapper">

    <header>
      <h2>Remember Me</h2>
      <div id="container-header-buttons">
        <a class="link-button" href="/logout">Logout</a>
      </div>
    </header>

      <div id="flash-flex-box">
        <% flash.keys.each do |type| %>
          <div data-alert class="flash-bar <%=type%>">
            <p><%= flash[type] %></p>
            <a href="#" class="close">&times;</a>
          </div>
        <% end %>
      </div>

      <%= yield %>

      <footer id="footer">
        <small id="copyright">&copy; 2019 <strong>Remember Me</strong></small>
        <div id="container-footer-buttons">
          <a class="link-button" href="https://www.myremember.co.uk/terms-of-use">Terms Of Use</a>
          <a class="link-button" href="https://www.myremember.co.uk/privacy-policy">Privacy Policy</a>
        </div>
      </footer>


    <script>
    
      $( ".flash-bar a" ).click(function() {
        $( this ).parent().addClass( "remove_flash_bar" ).delay(500).queue(function() { $(this).remove(); });
      });
      
    </script>

    <!--[if lt IE 7]>
      <script src="//ajax.googleapis.com/ajax/libs/chrome-frame/1.0.2/CFInstall.min.js"></script>
      <script>window.attachEvent("onload",function(){CFInstall.check({mode:"overlay"})})</script>
    <![endif]-->
  </body>
</html>
